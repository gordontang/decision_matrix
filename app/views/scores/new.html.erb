<% provide(:title, "Scores") %>
<div class="center jumbotron">
	<h3>Score your alternatives against each criteria.</h3>
	<p>Rate from 0 to 10</p>
	<br>
	<p><small><em>10 is best, 0 is worst</em></small></p>

	<div class="row">
  	<div class="col-md-4 col-md-offset-4">
  		<%= form_for(@score) do |f| %>
				<%= render 'shared/error_messages', object: f.object %>

				<%= f.label :value %>
			  <%= f.text_field :value, class: 'form_control' %>
			  <%= f.label :alternative_id %>
			  <%= f.text_field :alternative_id, class: 'form_control' %>
			  <%= f.label :goal_id %>
			  <%= f.text_field :goal_id, class: 'form_control' %>

			  <%= f.submit "Next", class: "btn btn-primary" %>
			<% end %>

		</div>
	</div>
</div>
