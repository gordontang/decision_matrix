<% provide(:title, 'Modify Decision') %>
<div class="center jumbotron">

	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<%= form_for(@decision) do |f| %>
				<%= render 'shared/error_messages', object: f.object %>

				<%= f.label :name %>
			  <%= f.text_field :name, class: 'form_control' %>

			  <%= f.submit "Save changes", class: "btn btn-primary" %>
			<% end %>
		</div>
	</div>
	<br>
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<span class="warn"><%= link_to "Delete decision", @decision, method: :delete, data: { confirm: "You sure?" } %></span>
		</div>
	</div>

</div>

