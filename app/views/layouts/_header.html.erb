<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Decision Matrix", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Decision", current_decision %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Create <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Add an Alternative", alternatives_path %></li>
              <li><%= link_to "Add a Goal", goals_path %></li>
              <li><%= link_to "Add a Score", scores_path %></li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Options <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_decision %></li>
              <li><%= link_to "Settings", edit_decision_path(current_decision) %></li>
              <li class="divider"></li>
              <li><%= link_to "Log out", logout_path, method: "delete" %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>